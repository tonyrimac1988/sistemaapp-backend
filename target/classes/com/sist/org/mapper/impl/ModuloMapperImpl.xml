<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.sist.org.mapper.IModuloMapper">

	<!--INSERTAR MODULO -->
	<select id="insertarModulo"
		parameterType="Modulo"
		resultType="String">
		SELECT * FROM public.fn_insertar_modulo(
		#{nidsesion},		
		#{snombremodulo},
		#{sobservacion},
		#{ssiglas}	
		);
	</select>
	
	<!--LISTAR MODULO -->
	<select id="listarModulo"
		resultType="Modulo">
		SELECT 
		nidmodulo, 
		snombremodulo, 
		ssiglas, 
		sobservacion, 
		bactivo, 
		dfechareg, 
		nidsesion
		FROM public.modulo;
	</select>
	
	<!--ACTUALIZAR MODULO -->
	<select id="actualizarModulo"
		parameterType="Modulo"
		resultType="String">
		SELECT * FROM public.fn_actualizar_modulo(
		#{nidmodulo},
		#{snombremodulo},
		#{sobservacion},
		#{ssiglas}	
		);
	</select>
	
	<!--ELIMINAR MODULO -->
	<select id="eliminarModulo"
		parameterType="Modulo"
		resultType="String">
		SELECT * FROM public.fn_eliminar_modulo(#{nidmodulo});
	</select>
</mapper>