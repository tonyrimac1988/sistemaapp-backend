<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.sist.org.mapper.IRolMapper">

	<!--INSERTAR ROL -->
	<select id="insertarRol" parameterType="Rol" resultType="String">
		SELECT *
		FROM public.fn_insertar_rol(
		#{nidsesion},
		#{siglas},
		#{snombrerol},
		#{sobservacion}
		);
	</select>

	<!--LISTAR ROL -->
	<select id="listarRol" resultType="Rol">
		SELECT
		nidrol,
		snombrerol,
		siglas,
		sobservacion,
		bactivo,
		dfechareg,
		nidsesion
		FROM public.rol;
	</select>

	<!--ACTUALIZAR ROL -->
	<select id="actualizarRol" parameterType="Rol"
		resultType="String">
		SELECT * FROM public.fn_actualizar_rol(
		#{nidrol},
		#{nidsesion},
		#{siglas},
		#{snombrerol},
		#{sobservacion}
		);
	</select>

	<!--ELIMINAR ROL -->
	<select id="eliminarRol" parameterType="Rol" resultType="String">
		SELECT *
		FROM public.fn_eliminar_rol(#{nidrol});
	</select>

	<!-- CONSULTA AREA DEL USUAIRO -->
	<select id="ListarAreaUsuario" parameterType="Integer"
		resultType="Integer">
		SELECT
		R.nidrol
		FROM
		usuario u
		INNER JOIN usuario_rol ur ON
		U.nidusuario = UR.nidusuario
		INNER JOIN rol r ON
		UR.nidrol = R.nidrol
		WHERE
		U.nidusuario = #{nidusuario}
		AND UR.bactivo = TRUE;
	</select>

	<!--LISTAR ROL PAGE -->
	<select id="listarRolPage" resultType="Rol"
		parameterType="Pageable">
		SELECT
		nidrol,
		snombrerol,
		siglas,
		sobservacion,
		bactivo,
		dfechareg,
		nidsesion
		FROM public.rol
		OFFSET
		#{pageNumber} ROWS FETCH FIRST #{pageSize} ROWS ONLY;

	</select>
	
	<!--LISTAR COUNT ROL -->
	<select id="countElements" resultType="int">
		SELECT count(*) FROM
		rol r WHERE bactivo = true;
	</select>
</mapper>